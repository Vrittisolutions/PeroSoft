<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_sales_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="#0C8FD1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iconlogo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvpTitle"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="PetroSoft"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.17"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Logo : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>
            <EditText
                android:id="@+id/edfilepath"
                android:layout_width="0dp"
                android:layout_weight="0.70"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="File Path"
                android:minLines="1"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp"
                >
            </EditText>
            <ImageButton
                android:layout_weight="0.13"
                android:id="@+id/btngallery"
                android:layout_width="0dp"
                android:layout_marginTop="5sp"
                android:layout_height="45dp"
                android:src="@drawable/ic_gallery_pics"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp">
            </ImageButton>
        </LinearLayout>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:hint="Printer Usage : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="3dp" >

    </TextView>

    <AutoCompleteTextView
        android:id="@+id/edPrinterUsage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:editable="false"
        android:hint="Select Option"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:hint="Working Date : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="3dp" >
    </TextView>

    <EditText
        android:id="@+id/edworkingdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:editable="false"
        android:hint="Select Date"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Default Item : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>

            <AutoCompleteTextView
                android:id="@+id/eddefaultitem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"

                android:hint="Set Default Item"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Need of Vehicle Km : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>

            <AutoCompleteTextView
                android:id="@+id/edNeedVehKm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:editable="false"
                android:hint="No"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Disable Rate,Qty,Amt,Cashier : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>

            <AutoCompleteTextView
                android:id="@+id/edNeedRQAC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:editable="false"
                android:hint="No"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Select Scan Mode : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>

            <AutoCompleteTextView
                android:id="@+id/edselscanmode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:editable="false"
                android:hint="RFID/QRCOde"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:hint="Only RFID Sale : "
                android:textColor="#000000"
                android:textSize="18dp"
                android:padding="3dp" >
            </TextView>

            <AutoCompleteTextView
                android:id="@+id/edonlyrfidsale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:editable="false"
                android:hint="No"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:hint="Terms and Conditions : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:padding="3dp" >
    </TextView>

    <EditText
        android:id="@+id/termsNcondition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:maxLines="30"
        android:hint="Enter Terms and Conditions"
        android:text="@string/TnC"
        />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="bottom"
        android:layout_weight="10"

        android:background="@drawable/buttonback"
        android:text="Save Settings"
        android:textColor="#ffffff" />

     </LinearLayout>

</LinearLayout>