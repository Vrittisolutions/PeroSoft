<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="#0C8FD1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvpTitle"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="PetroSoft"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edCustName"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="90sp"
            android:gravity="bottom"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edVechNo"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="90sp"
            android:gravity="bottom"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edProductCode"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:layout_weight="0.9"
                android:drawablePadding="110sp"
                android:gravity="bottom"
                android:inputType="number" />

            <Button
                android:id="@+id/btnProductCode"
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.1"
                android:background="@drawable/buttonback"
                android:onClick="btnProductCodeClick"
                android:text="..."
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edDescription"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="100sp"
            android:editable="false"
            android:gravity="bottom"
            android:inputType="number"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edRate"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="80sp"
            android:editable="false"
            android:gravity="bottom"
            android:inputType="number"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edQuantity"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="80sp"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edAmount"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:drawablePadding="80sp"
            android:editable="false"
            android:gravity="bottom"
            android:inputType="number"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_marginTop="30sp"
                android:layout_weight="0.25"
                android:background="@drawable/buttonback"
                android:text="Save"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnExitPrint"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_marginTop="30sp"
                android:layout_weight="0.3"
                android:background="@drawable/buttonback"
                android:text="Exit-Print"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_marginTop="30sp"
                android:layout_weight="0.25"
                android:background="@drawable/buttonback"
                android:text="Cancel"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_marginTop="30sp"
                android:layout_weight="0.2"
                android:background="@drawable/buttonback"
                android:text="Scan"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>