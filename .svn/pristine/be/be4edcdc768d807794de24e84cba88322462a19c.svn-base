<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="#0C8FD1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iconlogo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvpTitle"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="PetroSoft"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1.00" >

        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:padding="3sp"
            android:text="Pump No"
            android:textColor="#0C8FD1"
            android:textSize="17sp" />
        
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:padding="3sp"
            android:text="Pump Name"
            android:textColor="#0C8FD1"
            android:textSize="17sp" />
        
        <TextView
            android:layout_width="0sp"
            android:layout_height="50sp"            
            android:layout_weight="0.6"
            android:gravity="right|center_vertical"
            android:padding="3sp"
            android:text="Closing"
            android:textColor="#0C8FD1"
            android:textSize="17sp" />
        </LinearLayout>
        
        <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"   
      >
   

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_marginBottom="70sp" >

    <ListView
        android:id="@+id/listview_choose_result_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="#cdcdcd"
                    android:dividerHeight="1dp"
        android:layout_gravity="center_horizontal">
    </ListView>
    
    </LinearLayout>

 <Button
     android:id="@+id/btnPetroSale"
     android:layout_width="match_parent"
     android:layout_height="60dp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:layout_margin="3dp"
     android:background="@drawable/buttonback"
     android:gravity="left|center_vertical"
     android:text="Petro Sale: "
     android:textColor="#ffffff" />

    </RelativeLayout>
   



</LinearLayout>
