<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="#0C8FD1"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvpTitle"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="PetroSoft"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
        <ImageView
            android:id="@+id/button_add"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@android:color/transparent"
            android:onClick="FilterClick"
            android:src="@drawable/expand" >
        </ImageView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
    android:background="#dcdcdc">

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:gravity="center_vertical"
            android:layout_weight="0.3"
            android:padding="3sp"
            android:text="Account Name"
            android:textColor="#0C8FD1"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_weight="0.7"
            android:gravity="right|center_vertical"
            android:padding="3sp"
            android:text="Amount"
            android:textColor="#0C8FD1"
            android:textSize="17sp" />
        </LinearLayout>
        
        <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"   
      >
   

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:layout_marginBottom="50sp" >

    <ListView
        android:id="@+id/listview_dsr_other_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="#cdcdcd"
        android:dividerHeight="1dp"
        android:layout_gravity="center_horizontal">
    </ListView>
    
    </LinearLayout>

 <Button
     android:id="@+id/btnOtherRcpt"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:paddingLeft="15dp"
     android:background="@drawable/button_pressed"
     android:gravity="right|center_vertical"
     android:text="Other Rcpt: "
     android:textColor="#ffffff" />

    </RelativeLayout>
   



</LinearLayout>
